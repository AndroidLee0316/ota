<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:maxHeight="350dp">

    <LinearLayout
        android:id="@+id/rll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:background="@drawable/ota_white_round_bg_new"
        android:maxHeight="350dp"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:maxHeight="182dp"
            android:paddingBottom="30dp"
            android:paddingTop="10dp"
            android:scrollbarSize="4dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="#2e332f"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_update_now"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ota_blue_round_bg_new"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="#ffffff"
            android:textSize="17sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/ota_ic_update" />

    <View
        android:id="@+id/v_center_line"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@+id/rll_content"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_below="@+id/v_center_line"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ota_ic_close_round" />
</RelativeLayout>